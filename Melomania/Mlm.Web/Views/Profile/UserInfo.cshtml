@model Mlm.Web.Models.ProfileModel


    <div class="col-lg-5">
        <div class="media">
            
            <a class="pull-left" href="@Url.Action("Manage", "Profile")">
                <img class="media-object dp img-circle" src="@Url.Action("GetImage_By_UserId", "Account")" style="width: 100px;height:100px;">
            </a>
            <div class="media-body">
                <h3 class="media-heading">@Model.Login</h3>
                <h4 class="media-heading">@Model.Name  @Model.Surname 
                    <small> <span class="label label-default">@Model.Address</span></small>
                </h4>
                <hr style="margin:8px auto">
                @Html.ActionLink("Log out", "LogOut", "Account", null, new { @class="btn btn-danger"})
            </div>
        </div>

    </div>
