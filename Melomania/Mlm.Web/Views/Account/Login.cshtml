@model Mlm.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
}


<link href='http://fonts.googleapis.com/css?family=Raleway:400,200' rel='stylesheet' type='text/css'>

<div class="container">
    <div class="row login_box">
        <div class="col-md-12 col-xs-12" align="center">
            <div class="line"><h3>@DateTime.Now.ToShortDateString()</h3></div>
            <div class="outter"><img src="~/Content/Image/log_2.jpg" class="image-circle" /></div>
            <h1>Hi Guest</h1>
        </div>
        @using(Html.BeginForm("Login", "Account", FormMethod.Post))
        { 
            <div class="col-md-12 col-xs-12 login_control">

                <div class="control">
                    <input type="text" class="form-control" placeholder="Email" />
                </div>

                <div class="control">
                    <input type="password" class="form-control" placeholder="Password" />
                </div>
                <div align="center">
                    <input type="submit" class="btn btn-orange" value="Login" />
                </div>
            </div>
        }



    </div>
</div>