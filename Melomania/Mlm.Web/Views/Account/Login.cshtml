@model Mlm.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row login_box">
        <div class="col-md-12 col-xs-12" align="center">
            <div class="line"><h3>@DateTime.Now.ToShortDateString()</h3></div>
            <div class="outter"><img src="~/Content/Image/log_2.jpg" class="image-circle" /></div>
            <h1>Hi Guest</h1>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="col-md-12 col-xs-12 login_control">
                <div class="control">
                    <input type="text" name="Login" class="form-control" placeholder="Login" />
                </div>

                <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />

                <div class="control">
                    <input type="password" name="Password" class="form-control" placeholder="Password" />
                </div>
                <div style="margin: 0 0 0 15%; display: inline-block;">
                	<div class=" btn-group">

                    <input type="submit" class="btn btn-orange" value="Sign In" />

                    @Html.ActionLink("Sign Up", "Register", "Account", null, new { @class = "btn btn-blue", id = "abtn" })

                </div>
                </div>

            </div>
        }
    </div>
</div>